# OpenAI API Key (Required)
OPENAI_API_KEY=your_openai_api_key_here

# Whisper Model Size (optional: tiny, base, small, medium, large)
WHISPER_MODEL=base

# Edge-TTS Voice (optional)
# Popular voices: en-US-GuyNeural, en-US-JennyNeural, en-GB-RyanNeural
TTS_VOICE=en-US-GuyNeural

# Maximum video upload size in MB (optional, default: 2000)
MAX_VIDEO_SIZE_MB=2000

# Flask settings
FLASK_DEBUG=false
PORT=5000
